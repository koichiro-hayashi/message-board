<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-6">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <br/>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">内容:</label>
    <div class="col-md-6">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class=container>
    <%= f.submit class: "btn btn-primary btn-lg btn-block" %>    
  </div>
<% end %>